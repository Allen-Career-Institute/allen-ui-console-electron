{
  "appId": "com.allendigital.allen-ui-console",
  "productName": "Allen UI Console",
  "directories": {
    "output": "dist-electron-builder",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "node_modules/electron-store/**/*",
    "node_modules/dotenv/**/*",
    "node_modules/@sentry/**/*",
    "!**/*.d.ts",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/*.log",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/test/**",
    "!**/tests/**",
    "!**/__tests__/**",
    "!**/.git/**",
    "!**/.github/**",
    "!**/.vscode/**",
    "!**/.idea/**",
    "!**/coverage/**",
    "!**/docs/**",
    "!**/examples/**"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "asInvoker",
    "icon": null
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "publish": {
    "provider": "github",
    "owner": "dinesh-kumar-allen",
    "repo": "allen-ui-console-electron",
    "private": false,
    "releaseType": "release"
  },
  "forceCodeSigning": false,
  "asar": false
}
