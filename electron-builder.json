{
  "appId": "com.allendigital.allen-ui-console",
  "productName": "Allen Console",
  "directories": {
    "output": "dist-electron-builder",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "node_modules/electron-store/**/*",
    "node_modules/dotenv/**/*",
    "node_modules/@sentry/**/*",
    "!**/*.d.ts",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/*.log",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/test/**",
    "!**/tests/**",
    "!**/__tests__/**",
    "!**/.git/**",
    "!**/.github/**",
    "!**/.vscode/**",
    "!**/.idea/**",
    "!**/coverage/**",
    "!**/docs/**",
    "!**/examples/**",
    "!**/scripts/**",
    "!**/build/**",
    "!**/out/**",
    "!**/node_modules/**",
    "!**/src/**"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "appx",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "asInvoker",
    "icon": "assets/icons/win/icon.ico",
    "artifactName": "${productName}-${version}-installer.${ext}"
  },
  "appx": {
    "identityName": "AllenDigital.AllenConsole",
    "publisher": "CN=AllenDigital",
    "displayName": "Allen Console",
    "publisherDisplayName": "Allen Digital",
    "backgroundColor": "#ffffff",
    "languages": ["en-US"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Allen Console"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icons/mac/icon.icns",
    "artifactName": "${productName}-${version}-mac.${ext}",
    "category": "public.app-category.productivity",
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "notarize": false,
    "extendInfo": {
      "CFBundleDisplayName": "Allen Console",
      "CFBundleExecutable": "Allen Console",
      "CFBundleIdentifier": "com.allendigital.allen-ui-console",
      "CFBundleInfoDictionaryVersion": "6.0",
      "CFBundleName": "Allen Console",
      "CFBundlePackageType": "APPL",
      "CFBundleShortVersionString": "1.0.0",
      "CFBundleVersion": "1.0.0",
      "LSMinimumSystemVersion": "10.15.0",
      "NSCameraUsageDescription": "This app requires camera access for streaming",
      "NSMicrophoneUsageDescription": "This app requires microphone access for streaming",
      "NSAppleEventsUsageDescription": "This app needs access to Apple events",
      "NSSystemAdministrationUsageDescription": "This app needs to capture the screen",
      "NSDesktopFolderUsageDescription": "Access to desktop may be needed for screen recording",
      "NSDocumentsFolderUsageDescription": "Access to documents may be needed",
      "NSDownloadsFolderUsageDescription": "Access to downloads may be needed",
      "NSHighResolutionCapable": true,
      "NSRequiresAquaSystemAppearance": false,
      "LSUIElement": false,
      "LSApplicationCategoryType": "public.app-category.productivity"
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icons/png/512x512.png",
    "artifactName": "${productName}-${version}-linux.${ext}",
    "category": "Utility"
  },
  "publish": {
    "provider": "github",
    "owner": "dinesh-kumar-allen",
    "repo": "allen-ui-console-electron",
    "private": false,
    "releaseType": "release"
  },
  "forceCodeSigning": false,
  "asar": true,
  "asarUnpack": ["node_modules/agora-electron-sdk"],
  "compression": "maximum",
  "removePackageScripts": true,
  "removePackageKeywords": true
}
