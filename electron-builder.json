{
  "appId": "com.allendigital.allen-ui-console",
  "productName": "Allen Console",
  "directories": {
    "output": "dist-electron-builder",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "node_modules/electron-store/**/*",
    "node_modules/dotenv/**/*",
    "node_modules/@sentry/**/*",
    "!**/*.d.ts",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/*.log",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/test/**",
    "!**/tests/**",
    "!**/__tests__/**",
    "!**/.git/**",
    "!**/.github/**",
    "!**/.vscode/**",
    "!**/.idea/**",
    "!**/coverage/**",
    "!**/docs/**",
    "!**/examples/**",
    "!**/scripts/**",
    "!**/build/**",
    "!**/out/**",
    "!**/node_modules/**",
    "!**/src/**"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "asInvoker",
    "icon": null,
    "artifactName": "${productName}-${version}-installer.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Allen Console"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": null,
    "artifactName": "${productName}-${version}-mac.${ext}",
    "category": "public.app-category.productivity",
    "info": {
      "NSCameraUsageDescription": "We need camera access for video calls",
      "NSMicrophoneUsageDescription": "We need microphone access for audio calls",
      "NSSystemAudioUsageDescription": "We need system audio access for screen sharing",
      "NSAppleEventsUsageDescription": "We need to control other apps for screen sharing"
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": null,
    "artifactName": "${productName}-${version}-linux.${ext}",
    "category": "Utility"
  },

  "publish": {
    "provider": "github",
    "owner": "dinesh-kumar-allen",
    "repo": "allen-ui-console-electron",
    "private": false,
    "releaseType": "release"
  },
  "forceCodeSigning": false,
  "asar": false,
  "compression": "maximum",
  "removePackageScripts": true,
  "removePackageKeywords": true
}
