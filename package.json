{
  "name": "allen-ui-console-electron",
  "version": "1.0.0",
  "description": "Allen UI Console Electron App with WebView and Video Streaming",
  "main": "src/main.js",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "npx oxlint .",
    "lint:fix": "npx oxlint --fix .",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "build": "yarn make",
    "dev": "yarn start",
    "prepare": "husky install",
    "install-deps": "yarn install",
    "clean": "yarn dlx rimraf node_modules out dist",
    "postinstall": "yarn dlx husky install",
    "renderer:dev": "webpack --mode development --watch",
    "renderer:build": "webpack --mode production",
    "renderer:start": "webpack serve --mode development",
    "dev:watch": "nodemon --watch src/main.js --watch src/preload.js --watch src/recording-process.js --watch src/advanced-recording-process.js --exec \"yarn start\"",
    "dev:full": "concurrently \"yarn renderer:dev\" \"yarn dev:watch\"",
    "dev:restart": "yarn dev:watch",
    "dev:script": "./scripts/dev.sh"
  },
  "keywords": [
    "electron",
    "webview",
    "agora",
    "video-streaming",
    "screen-recording",
    "react"
  ],
  "author": "Allen Digital",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@sentry/electron": "^4.0.0",
    "@sentry/node": "^7.0.0",
    "@sentry/tracing": "^7.0.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "agora-rtc-sdk-ng": "^4.20.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "mediasoup-client": "^3.6.98",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "webrtc-adapter": "^8.2.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npx oxlint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon.icns",
        "asar": true,
        "extraResource": [
          "./assets/"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "allen_ui_console"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "your-github-username",
              "name": "allen-ui-console-electron"
            },
            "prerelease": false
          }
        }
      ]
    }
  }
}
